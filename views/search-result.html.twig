<!DOCTYPE>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Your CD Database</title>
    </head>
    <body>

        <h3>Your results:</h3>


        <ul>
        {% set previous = false %}
        {% for cd in cds %}
            {% if previous|capitalize != cd.getArtist()|capitalize %}
                {% if not loop.first %}
                    </ul>
                {% endif %}

                <li>Artist: {{ cd.getArtist() }}</li>
                <ul>

                <li>Title: {{cd.getTitle()}}</li>
            {% else %}
                <li>Title: {{cd.getTitle()}}</li>
            {% endif %}
            {% set previous = cd.getArtist() %}
        {% endfor %}
        </ul>

        <a href='/'>
            <button class='btn btn-info' >Back to Home</button>
        </a>

    </body>
</html>
